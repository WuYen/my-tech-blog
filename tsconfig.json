{
  "compilerOptions": {
    "target": "ESNext", // 使用最新的 ECMAScript 目標（更符合 Next.js 預設）
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // 建議用 'node' 以避免與部分工具的兼容問題
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // 設置基準路徑（通常為專案根目錄）
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node"
    ] // 確保包含 Node.js 的類型定義
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
